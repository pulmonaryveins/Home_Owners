<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Initialize tabs and handle tab changes
        var triggerTabList = [].slice.call(document.querySelectorAll('#bookingTabs a'))
        triggerTabList.forEach(function (triggerEl) {
            triggerEl.addEventListener('click', function (event) {
                // Update URL with tab parameter without reloading page
                var tabId = this.getAttribute('href').replace('#', '').replace('-tab', '');
                var url = new URL(window.location);
                url.searchParams.set('tabFilter', tabId);
                history.pushState({}, '', url);
            })
        })
    });
</script>