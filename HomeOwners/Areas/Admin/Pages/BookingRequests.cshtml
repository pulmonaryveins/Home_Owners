<div class="container mt-5 pt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Facility Bookings</h1>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        var statusType = TempData["StatusType"]?.ToString() == "Success" ? "success" : "danger";
        <div class="alert alert-@statusType alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi @(statusType == "success" ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                <span>@TempData["StatusMessage"]</span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <ul class="nav nav-tabs card-header-tabs" id="bookingTabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#pending-tab" data-bs-toggle="tab">
                        <i class="bi bi-hourglass me-1"></i>
                        Pending Requests
                        @if (Model.PendingBookings.Count > 0)
                        {
                            <span class="badge bg-danger ms-2">@Model.PendingBookings.Count</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#all-tab" data-bs-toggle="tab">
                        <i class="bi bi-calendar-check me-1"></i>
                        All Reservations
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pending-tab">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Facility</th>
                                    <th>Requester</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Contact</th>
                                    <th>Requested On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PendingBookings != null && Model.PendingBookings.Any())
                                {
                                    @foreach (var booking in Model.PendingBookings)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@(string.IsNullOrEmpty(booking.Facility?.ImageUrl) ? "/images/placeholder.jpg" : booking.Facility.ImageUrl)"
                                                         alt="@booking.Facility?.Name" class="booking-thumbnail me-3">
                                                    <span>@booking.Facility?.Name</span>
                                                </div>
                                            </td>
                                            <td>@booking.FullName</td>
                                            <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                            <td>@DateTime.Today.Add(booking.StartTime).ToString("hh:mm tt") - @DateTime.Today.Add(booking.EndTime).ToString("hh:mm tt")</td>
                                            <td>@booking.ContactNumber</td>
                                            <td>@booking.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <form method="post" asp-page-handler="Approve" asp-route-id="@booking.Id">
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-check-lg"></i> Approve
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-page-handler="Reject" asp-route-id="@booking.Id">
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            <i class="bi bi-x-lg"></i> Reject
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="bi bi-calendar-check display-4 text-muted"></i>
                                                <h5 class="mt-3">No pending requests</h5>
                                                <p class="text-muted">There are no booking requests waiting for approval</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="all-tab">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Facility</th>
                                    <th>Requester</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                    <th>Contact</th>
                                    <th>Requested On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.AllBookings != null && Model.AllBookings.Any())
                                {
                                    @foreach (var booking in Model.AllBookings)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@(string.IsNullOrEmpty(booking.Facility?.ImageUrl) ? "/images/placeholder.jpg" : booking.Facility.ImageUrl)"
                                                         alt="@booking.Facility?.Name" class="booking-thumbnail me-3">
                                                    <span>@booking.Facility?.Name</span>
                                                </div>
                                            </td>
                                            <td>@booking.FullName</td>
                                            <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                            <td>@DateTime.Today.Add(booking.StartTime).ToString("hh:mm tt") - @DateTime.Today.Add(booking.EndTime).ToString("hh:mm tt")</td>
                                            <td>
                                                @if (booking.Status == BookingStatus.Pending)
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                                else if (booking.Status == BookingStatus.Approved)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else if (booking.Status == BookingStatus.Completed)
                                                {
                                                    <span class="badge bg-info">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                            </td>
                                            <td>@booking.ContactNumber</td>
                                            <td>@booking.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (booking.Status == BookingStatus.Approved)
                                                {
                                                    <form method="post" asp-page-handler="MarkComplete" asp-route-id="@booking.Id">
                                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                                            <i class="bi bi-check-circle"></i> Mark Complete
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="bi bi-calendar-x display-4 text-muted"></i>
                                                <h5 class="mt-3">No reservations found</h5>
                                                <p class="text-muted">There are no booking records in the system yet</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

