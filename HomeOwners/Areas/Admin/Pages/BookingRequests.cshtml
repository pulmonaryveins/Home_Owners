<div class="container mt-5 pt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="bi bi-calendar-check me-2"></i>
                Facility Bookings
            </h1>
            <p class="text-muted mb-0 mt-1">Manage all facility reservation requests and bookings</p>
        </div>
        <div>
            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        var statusType = TempData["StatusType"]?.ToString() == "Success" ? "success" : "danger";
        <div class="alert alert-@statusType alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi @(statusType == "success" ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                <span>@TempData["StatusMessage"]</span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <ul class="nav nav-pills card-header-pills" id="bookingTabs">
                <li class="nav-item">
                    <a class="nav-link @(string.IsNullOrEmpty(Model.TabFilter) || Model.TabFilter == "pending" ? "active" : "")" 
                       href="#pending-tab" data-bs-toggle="tab">
                        <i class="bi bi-hourglass me-1"></i>
                        Pending Requests
                        @if (Model.PendingBookings.Count > 0)
                        {
                            <span class="badge bg-danger ms-2">@Model.PendingBookings.Count</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.TabFilter == "all" ? "active" : "")" href="#all-tab" data-bs-toggle="tab">
                        <i class="bi bi-calendar-check me-1"></i>
                        All Reservations
                    </a>
                </li>
            </ul>
        </div>
        
        <div class="tab-content">
            <div class="tab-pane fade @(string.IsNullOrEmpty(Model.TabFilter) || Model.TabFilter == "pending" ? "show active" : "")" id="pending-tab">
                <div class="card-body border-bottom">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <form method="get" class="search-form">
                                <input type="hidden" name="tabFilter" value="pending" />
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text"
                                           name="searchString"
                                           value="@Model.CurrentFilter"
                                           class="form-control border-start-0"
                                           placeholder="Search by name or facility..."
                                           aria-label="Search bookings" />
                                    <button type="submit" class="btn btn-primary">
                                        <span class="d-none d-md-inline">Search</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex justify-content-md-end">
                            <div class="dropdown">
                                <button type="button"
                                        class="btn btn-outline-secondary dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-sort-alpha-down"></i>
                                    <span class="ms-1 d-none d-md-inline">Sort by</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "date" && Model.SortDirection == "desc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="date_desc" 
                                           asp-route-currentFilter="@Model.CurrentFilter" asp-route-tabFilter="pending">
                                            <i class="bi bi-calendar-date"></i> Newest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "date" && Model.SortDirection == "asc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="date" 
                                           asp-route-currentFilter="@Model.CurrentFilter" asp-route-tabFilter="pending">
                                            <i class="bi bi-calendar-date"></i> Oldest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "name" && Model.SortDirection == "asc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="name" 
                                           asp-route-currentFilter="@Model.CurrentFilter" asp-route-tabFilter="pending">
                                            <i class="bi bi-sort-alpha-down"></i> Name (A-Z)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "name" && Model.SortDirection == "desc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="name_desc" 
                                           asp-route-currentFilter="@Model.CurrentFilter" asp-route-tabFilter="pending">
                                            <i class="bi bi-sort-alpha-up"></i> Name (Z-A)
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover booking-table mb-0">
                        <thead>
                            <tr>
                                <th>Facility</th>
                                <th>Requester</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Contact</th>
                                <th>Requested On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PendingBookings != null && Model.PendingBookings.Any())
                            {
                                @foreach (var booking in Model.PendingBookings)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(string.IsNullOrEmpty(booking.Facility?.ImageUrl) ? "/images/placeholder.jpg" : booking.Facility.ImageUrl)"
                                                     alt="@booking.Facility?.Name" class="booking-thumbnail me-3">
                                                <span class="facility-name">@booking.Facility?.Name</span>
                                            </div>
                                        </td>
                                        <td><span class="fw-medium">@booking.FullName</span></td>
                                        <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                        <td><span class="time-badge">@DateTime.Today.Add(booking.StartTime).ToString("hh:mm tt") - @DateTime.Today.Add(booking.EndTime).ToString("hh:mm tt")</span></td>
                                        <td>@booking.ContactNumber</td>
                                        <td><span class="text-muted">@booking.CreatedDate.ToString("MMM dd, yyyy")</span></td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <form method="post" asp-page-handler="Approve" asp-route-id="@booking.Id">
                                                    <button type="submit" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Approve Booking">
                                                        <i class="bi bi-check-lg"></i> Approve
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="Reject" asp-route-id="@booking.Id">
                                                    <button type="submit" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Reject Booking">
                                                        <i class="bi bi-x-lg"></i> Reject
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="empty-state">
                                            <i class="bi bi-calendar-check display-4 text-muted"></i>
                                            <h5 class="mt-3">No pending requests</h5>
                                            <p class="text-muted">There are no booking requests waiting for approval</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (Model.PendingBookings != null && Model.PendingBookings.Count > 0)
                {
                    <div class="card-footer bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                Showing @((Model.PendingPageIndex - 1) * Model.PageSize + 1) -
                                @(Math.Min(Model.PendingPageIndex * Model.PageSize, Model.PendingTotalCount))
                                of @Model.PendingTotalCount bookings
                            </small>
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    @{
                                        var prevDisabled = Model.PendingPageIndex <= 1 ? "disabled" : "";
                                        var nextDisabled = Model.PendingPageIndex >= Model.PendingTotalPages ? "disabled" : "";
                                    }
                                    <li class="page-item @prevDisabled">
                                        <a class="page-link" asp-page="./BookingRequests" 
                                           asp-route-pendingPageIndex="1"
                                           asp-route-currentFilter="@Model.CurrentFilter"
                                           asp-route-sortOrder="@Model.CurrentSort"
                                           asp-route-tabFilter="pending">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @prevDisabled">
                                        <a class="page-link" asp-page="./BookingRequests"
                                           asp-route-pendingPageIndex="@(Model.PendingPageIndex - 1)"
                                           asp-route-currentFilter="@Model.CurrentFilter"
                                           asp-route-sortOrder="@Model.CurrentSort"
                                           asp-route-tabFilter="pending">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                    
                                    @for (var i = Math.Max(1, Model.PendingPageIndex - 2);
                                        i <= Math.Min(Model.PendingTotalPages, Model.PendingPageIndex + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.PendingPageIndex ? "active" : "")">
                                            <a class="page-link" asp-page="./BookingRequests"
                                               asp-route-pendingPageIndex="@i"
                                               asp-route-currentFilter="@Model.CurrentFilter"
                                               asp-route-sortOrder="@Model.CurrentSort"
                                               asp-route-tabFilter="pending">@i</a>
                                        </li>
                                    }
                                    
                                    <li class="page-item @nextDisabled">
                                        <a class="page-link" asp-page="./BookingRequests"
                                           asp-route-pendingPageIndex="@(Model.PendingPageIndex + 1)"
                                           asp-route-currentFilter="@Model.CurrentFilter"
                                           asp-route-sortOrder="@Model.CurrentSort"
                                           asp-route-tabFilter="pending">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @nextDisabled">
                                        <a class="page-link" asp-page="./BookingRequests"
                                           asp-route-pendingPageIndex="@Model.PendingTotalPages"
                                           asp-route-currentFilter="@Model.CurrentFilter"
                                           asp-route-sortOrder="@Model.CurrentSort"
                                           asp-route-tabFilter="pending">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>

            <div class="tab-pane fade @(Model.TabFilter == "all" ? "show active" : "")" id="all-tab">
                <div class="card-body border-bottom">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <form method="get" class="search-form">
                                <input type="hidden" name="tabFilter" value="all" />
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text"
                                           name="searchString"
                                           value="@Model.CurrentFilter"
                                           class="form-control border-start-0"
                                           placeholder="Search by name or facility..."
                                           aria-label="Search bookings" />
                                    <button type="submit" class="btn btn-primary">
                                        <span class="d-none d-md-inline">Search</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex justify-content-md-end gap-2">
                                <form method="post" asp-page-handler="ClearAllBookings" onsubmit="return confirm('WARNING: This will permanently delete ALL facility bookings and related payment records. This action cannot be undone. Are you sure you want to proceed?');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Clear Data
                                    </button>
                                </form>
                            <div class="dropdown">
                                <button type="button"
                                        class="btn btn-outline-primary dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-filter"></i>
                                    <span class="ms-1">@(Model.StatusFilter ?? "All Statuses")</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-page="./BookingRequests" asp-route-statusFilter="" asp-route-tabFilter="all"><i class="bi bi-grid-3x3-gap"></i> All Statuses</a></li>
                                    <li><a class="dropdown-item" asp-page="./BookingRequests" asp-route-statusFilter="Pending" asp-route-tabFilter="all"><i class="bi bi-hourglass"></i> Pending</a></li>
                                    <li><a class="dropdown-item" asp-page="./BookingRequests" asp-route-statusFilter="Approved" asp-route-tabFilter="all"><i class="bi bi-check-circle"></i> Approved</a></li>
                                    <li><a class="dropdown-item" asp-page="./BookingRequests" asp-route-statusFilter="Completed" asp-route-tabFilter="all"><i class="bi bi-trophy"></i> Completed</a></li>
                                    <li><a class="dropdown-item" asp-page="./BookingRequests" asp-route-statusFilter="Rejected" asp-route-tabFilter="all"><i class="bi bi-x-circle"></i> Rejected</a></li>
                                </ul>
                            </div>
                            
                            <div class="dropdown">
                                <button type="button"
                                        class="btn btn-outline-secondary dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-sort-alpha-down"></i>
                                    <span class="ms-1 d-none d-md-inline">Sort by</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "date" && Model.SortDirection == "desc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="date_desc" 
                                           asp-route-currentFilter="@Model.CurrentFilter" 
                                           asp-route-statusFilter="@Model.StatusFilter" 
                                           asp-route-tabFilter="all">
                                            <i class="bi bi-calendar-date"></i> Newest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "date" && Model.SortDirection == "asc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="date" 
                                           asp-route-currentFilter="@Model.CurrentFilter" 
                                           asp-route-statusFilter="@Model.StatusFilter" 
                                           asp-route-tabFilter="all">
                                            <i class="bi bi-calendar-date"></i> Oldest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "name" && Model.SortDirection == "asc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="name" 
                                           asp-route-currentFilter="@Model.CurrentFilter" 
                                           asp-route-statusFilter="@Model.StatusFilter" 
                                           asp-route-tabFilter="all">
                                            <i class="bi bi-sort-alpha-down"></i> Name (A-Z)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "name" && Model.SortDirection == "desc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="name_desc" 
                                           asp-route-currentFilter="@Model.CurrentFilter" 
                                           asp-route-statusFilter="@Model.StatusFilter" 
                                           asp-route-tabFilter="all">
                                            <i class="bi bi-sort-alpha-up"></i> Name (Z-A)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "bookingDate" && Model.SortDirection == "asc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="bookingDate" 
                                           asp-route-currentFilter="@Model.CurrentFilter" 
                                           asp-route-statusFilter="@Model.StatusFilter" 
                                           asp-route-tabFilter="all">
                                            <i class="bi bi-calendar-event"></i> Booking Date (Ascending)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(Model.SortField == "bookingDate" && Model.SortDirection == "desc" ? "active" : "")" 
                                           asp-page="./BookingRequests" asp-route-sortOrder="bookingDate_desc" 
                                           asp-route-currentFilter="@Model.CurrentFilter" 
                                           asp-route-statusFilter="@Model.StatusFilter" 
                                           asp-route-tabFilter="all">
                                            <i class="bi bi-calendar-event"></i> Booking Date (Descending)
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover booking-table mb-0">
                        <thead>
                            <tr>
                                <th>Facility</th>
                                <th>Requester</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Contact</th>
                                <th>Requested On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AllBookings != null && Model.AllBookings.Any())
                            {
                                @foreach (var booking in Model.AllBookings)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(string.IsNullOrEmpty(booking.Facility?.ImageUrl) ? "/images/placeholder.jpg" : booking.Facility.ImageUrl)"
                                                     alt="@booking.Facility?.Name" class="booking-thumbnail me-3">
                                                <span class="facility-name">@booking.Facility?.Name</span>
                                            </div>
                                        </td>
                                        <td><span class="fw-medium">@booking.FullName</span></td>
                                        <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                        <td><span class="time-badge">@DateTime.Today.Add(booking.StartTime).ToString("hh:mm tt") - @DateTime.Today.Add(booking.EndTime).ToString("hh:mm tt")</span></td>
                                        <td>
                                            @if (booking.Status == BookingStatus.Pending)
                                            {
                                                <span class="status-badge pending">
                                                    <i class="bi bi-hourglass"></i> Pending
                                                </span>
                                            }
                                            else if (booking.Status == BookingStatus.Approved)
                                            {
                                                <span class="status-badge approved">
                                                    <i class="bi bi-check-circle"></i> Approved
                                                </span>
                                            }
                                            else if (booking.Status == BookingStatus.Completed)
                                            {
                                                <span class="status-badge completed">
                                                    <i class="bi bi-trophy"></i> Completed
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge rejected">
                                                    <i class="bi bi-x-circle"></i> Rejected
                                                </span>
                                            }
                                        </td>
                                        <td>@booking.ContactNumber</td>
                                        <td><span class="text-muted">@booking.CreatedDate.ToString("MMM dd, yyyy")</span></td>
                                        <td>
                                            @if (booking.Status == BookingStatus.Approved)
                                            {
                                                <form method="post" class="d-inline">
                                                    <button type="submit" asp-page-handler="MarkComplete" asp-route-id="@booking.Id"
                                                            class="btn btn-sm btn-success" onclick="return confirm('Mark this booking as completed?')">
                                                        <i class="bi bi-check-circle me-1"></i> Mark Complete
