        transition: transform 0.3s ease;
    }

    .facility-row:hover .facility-thumbnail {
        transform: scale(1.05);
    }

    .facility-name {
        min-width: 200px;
    }

    .facility-description {
        font-size: 0.85rem;
        color: #718096;
        margin-top: 0.25rem;
        line-height: 1.4;
    }

    .price-badge {
        font-weight: 600;
        color: #4e6e4d;
        background-color: rgba(78, 110, 77, 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
