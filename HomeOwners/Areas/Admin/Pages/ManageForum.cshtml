@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })

            // Handle hide post modal
            var hidePostModal = document.getElementById('hidePostModal')
            hidePostModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget
                var postId = button.getAttribute('data-post-id')
                var postTitle = button.getAttribute('data-post-title')

                document.getElementById('postIdToHide').value = postId
                document.getElementById('postTitleHide').textContent = postTitle
            })

            // Handle delete post modal
            var deletePostModal = document.getElementById('deletePostModal')
            deletePostModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget
                var postId = button.getAttribute('data-post-id')
                var postTitle = button.getAttribute('data-post-title')

                document.getElementById('postIdToDelete').value = postId
                document.getElementById('postTitleDelete').textContent = postTitle
            })
            
            // Handle manage comments modal
            var manageCommentsModal = document.getElementById('manageCommentsModal')
            manageCommentsModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget
                var postId = button.getAttribute('data-post-id')
                var postTitle = button.getAttribute('data-post-title')
                
                document.getElementById('postTitleComments').textContent = postTitle
                document.getElementById('currentPostId').value = postId
                
                // Show loading spinner
                document.getElementById('commentsLoading').classList.remove('d-none')
                document.getElementById('commentsContainer').innerHTML = ''
                document.getElementById('noCommentsMessage').classList.add('d-none')
                
                // Fetch comments for this post
                fetch(`/api/forum/posts/${postId}/comments`)
                    .then(response => response.json())
                    .then(comments => {
                        // Hide loading spinner
                        document.getElementById('commentsLoading').classList.add('d-none')
                        
                        if (comments.length === 0) {
                            document.getElementById('noCommentsMessage').classList.remove('d-none')
                            return
                        }
                        
                        // Render comments
                        const commentsHtml = comments.map(comment => `
                            <div class="comment-item" id="comment-${comment.id}">
                                <div class="comment-header">
                                    <div class="comment-author">
                                        <i class="bi bi-person-circle me-1"></i>${comment.userName} 
                                        <small class="text-muted">(${comment.houseNumber || 'Unknown'})</small>
                                    </div>
                                    <div class="comment-date">
                                        ${new Date(comment.postedDate).toLocaleString()}
                                        ${comment.editedDate ? ' (edited)' : ''}
                                    </div>
                                </div>
                                <div class="comment-content">${comment.content}</div>
                                <div class="comment-actions">
                                    <button type="button" class="btn btn-sm btn-outline-danger delete-comment-btn"
                                            data-bs-toggle="modal" data-bs-target="#deleteCommentModal"
                                            data-comment-id="${comment.id}" 
                                            data-post-id="${postId}"
                                            data-comment-content="${comment.content.substring(0, 100)}${comment.content.length > 100 ? '...' : ''}">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </button>
                                </div>
                            </div>
                        `).join('')
                        
                        document.getElementById('commentsContainer').innerHTML = commentsHtml
                        
                        // Add event listeners for delete buttons
                        document.querySelectorAll('.delete-comment-btn').forEach(btn => {
                            btn.addEventListener('click', function() {
                                const commentId = this.getAttribute('data-comment-id')
                                const postId = this.getAttribute('data-post-id')
                                const commentContent = this.getAttribute('data-comment-content')
                                
                                document.getElementById('commentIdToDelete').value = commentId
                                document.getElementById('postIdForComment').value = postId
                                document.getElementById('commentPreview').textContent = commentContent
                            })
                        })
                    })
                    .catch(error => {
                        console.error('Error fetching comments:', error)
                        document.getElementById('commentsLoading').classList.add('d-none')
                        document.getElementById('commentsContainer').innerHTML = `
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Error loading comments. Please try again.
                            </div>
                        `
                    })
            })
        })
    </script>
