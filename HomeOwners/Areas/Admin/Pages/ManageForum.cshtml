<div class="container content-container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            @if (TempData["StatusMessage"] != null)
            {
                var statusType = TempData["StatusType"]?.ToString() == "Success" ? "success" : "danger";
                <div class="alert alert-@statusType alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi @(statusType == "success" ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                        <span>@TempData["StatusMessage"]</span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="page-title">
                        <i class="bi bi-chat-square-text me-2"></i>Community Forum Management
                    </h1>
                    <p class="text-muted mb-0">Moderate community discussions and forum posts</p>
                </div>

                <a href="/Home/Forum" target="_blank" class="btn btn-outline-primary">
                    <i class="bi bi-eye me-2"></i>View Forum
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="row g-2 align-items-center">
                        <div class="col-md-6">
                            <form method="get" class="search-form">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text"
                                           name="searchString"
                                           value="@(ViewData["CurrentFilter"]?.ToString())"
                                           class="form-control border-start-0"
                                           placeholder="Search posts..."
                                           aria-label="Search posts" />
                                    <button type="submit" class="btn btn-primary">
                                        <span class="d-none d-md-inline">Search</span>
                                        <i class="bi bi-search d-inline d-md-none"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex justify-content-md-end gap-2 flex-wrap">
                            <div class="dropdown">
                                <button type="button"
                                        class="btn btn-outline-primary dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-filter"></i>
                                    <span class="ms-1">@(ViewData["CategoryFilter"]?.ToString() ?? "All Categories")</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-categoryFilter=""><i class="bi bi-list-ul"></i> All Categories</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-categoryFilter="General"><i class="bi bi-chat"></i> General</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-categoryFilter="Question"><i class="bi bi-question-circle"></i> Questions</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-categoryFilter="Suggestion"><i class="bi bi-lightbulb"></i> Suggestions</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-categoryFilter="Event"><i class="bi bi-calendar-event"></i> Events</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-categoryFilter="Support"><i class="bi bi-life-preserver"></i> Support</a></li>
                                </ul>
                            </div>

                            <div class="dropdown">
                                <button type="button"
                                        class="btn btn-outline-danger dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-flag"></i>
                                    <span class="ms-1">@(ViewData["FlagFilter"]?.ToString() ?? "All Posts")</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-flagFilter=""><i class="bi bi-list-ul"></i> All Posts</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-flagFilter="Flagged"><i class="bi bi-flag-fill"></i> Flagged Posts</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-flagFilter="Hidden"><i class="bi bi-eye-slash"></i> Hidden Posts</a></li>
                                    <li><a class="dropdown-item" asp-page="./ManageForum" asp-route-flagFilter="Visible"><i class="bi bi-eye"></i> Visible Posts</a></li>
                                </ul>
                            </div>

                            <div class="dropdown">
                                <button type="button"
                                        class="btn btn-outline-secondary dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-sort-alpha-down"></i>
                                    <span class="ms-1 d-none d-md-inline">Sort by</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item @(ViewData["SortField"]?.ToString() == "date" && ViewData["SortDirection"]?.ToString() == "desc" ? "active" : "")"
                                           asp-page="./ManageForum" asp-route-sortOrder="date_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-categoryFilter="@ViewData["CategoryFilter"]" asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-calendar-date"></i> Newest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(ViewData["SortField"]?.ToString() == "date" && ViewData["SortDirection"]?.ToString() == "asc" ? "active" : "")"
                                           asp-page="./ManageForum" asp-route-sortOrder="date" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-categoryFilter="@ViewData["CategoryFilter"]" asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-calendar-date"></i> Oldest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(ViewData["SortField"]?.ToString() == "title" && ViewData["SortDirection"]?.ToString() == "asc" ? "active" : "")"
                                           asp-page="./ManageForum" asp-route-sortOrder="title" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-categoryFilter="@ViewData["CategoryFilter"]" asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-sort-alpha-down"></i> Title (A-Z)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(ViewData["SortField"]?.ToString() == "title" && ViewData["SortDirection"]?.ToString() == "desc" ? "active" : "")"
                                           asp-page="./ManageForum" asp-route-sortOrder="title_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-categoryFilter="@ViewData["CategoryFilter"]" asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-sort-alpha-up"></i> Title (Z-A)
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Title & Content</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Posted Date</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ForumPosts != null && Model.ForumPosts.Any())
                            {
                                @foreach (var post in Model.ForumPosts)
                                {
                                    <tr class="align-middle @(post.IsFlagged ? "table-danger" : (!post.IsVisible ? "table-secondary" : (post.IsPinned ? "table-info" : "")))">
                                        <td>
                                            <div class="post-title-cell">
                                                <div class="fw-medium">@post.Title</div>
                                                <div class="small text-muted post-excerpt">
                                                    @(post.Content != null && post.Content.Length > 100
                                                        ? post.Content.Substring(0, 100) + "..."
                                                        : post.Content)
                                                </div>
                                                @if (!string.IsNullOrEmpty(post.AdminNotes))
                                                {
                                                    <div class="admin-notes mt-1">
                                                        <span class="badge bg-dark text-white">Admin Note</span>
                                                        <span class="small fst-italic">@post.AdminNotes</span>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <span class="category-badge @post.Category.ToLower()">
                                                <i class="bi @(post.Category switch {
                                                        "General" => "bi-chat",
                                                        "Question" => "bi-question-circle",
                                                        "Suggestion" => "bi-lightbulb",
                                                        "Event" => "bi-calendar-event",
                                                        "Support" => "bi-life-preserver",
                                                        _ => "bi-chat-text"
                                                    }) me-1"></i> @post.Category
                                            </span>
                                        </td>
                                        <td>
                                            <div class="author-info">
                                                <div class="author-name">@post.UserName</div>
                                                <div class="small text-muted">ID: @post.UserId.Substring(0, 8)...</div>
                                            </div>
                                        </td>
                                        <td>@post.PostedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (post.IsFlagged)
                                            {
                                                <span class="status-badge flagged">
                                                    <i class="bi bi-flag-fill me-1"></i>Flagged
                                                </span>
                                            }
                                            else if (!post.IsVisible)
                                            {
                                                <span class="status-badge hidden">
                                                    <i class="bi bi-eye-slash me-1"></i>Hidden
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge visible">
                                                    <i class="bi bi-eye me-1"></i>Visible
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/Home/ForumPost/@post.Id" target="_blank"
                                                   class="btn btn-sm btn-outline-primary action-btn" data-bs-toggle="tooltip"
                                                   title="View Post">
                                                    <i class="bi bi-eye"></i>
                                                </a>

                                                @if (post.IsVisible)
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary action-btn hide-btn"
                                                            data-bs-toggle="modal" data-bs-target="#hidePostModal"
                                                            data-post-id="@post.Id" data-post-title="@post.Title"
                                                            title="Hide Post">
                                                        <i class="bi bi-eye-slash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <form method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@post.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success action-btn"
                                                                asp-page-handler="RestorePost" title="Restore Post">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    </form>
                                                }

                                                <!-- Pin/Unpin Button -->
                                                <form method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@post.Id" />
                                                    @if (post.IsPinned)
                                                    {
                                                        <button type="submit" class="btn btn-sm btn-success action-btn"
                                                                asp-page-handler="TogglePinPost" title="Unpin Post">
                                                            <i class="bi bi-pin-fill"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="btn btn-sm btn-outline-success action-btn"
                                                                asp-page-handler="TogglePinPost" title="Pin Post">
                                                            <i class="bi bi-pin"></i>
                                                        </button>
                                                    }
                                                </form>

                                                @if (post.IsFlagged)
                                                {
                                                    <form method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@post.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success action-btn"
                                                                asp-page-handler="UnflagPost" title="Remove Flag">
                                                            <i class="bi bi-flag"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@post.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-warning action-btn"
                                                                asp-page-handler="FlagPost" title="Flag Post">
                                                            <i class="bi bi-flag-fill"></i>
                                                        </button>
                                                    </form>
                                                }

                                                <button type="button" class="btn btn-sm btn-outline-danger action-btn"
                                                        data-bs-toggle="modal" data-bs-target="#deletePostModal"
                                                        data-post-id="@post.Id" data-post-title="@post.Title"
                                                        title="Delete Post">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <div class="empty-state">
                                            <i class="bi bi-chat-square-text display-4 text-muted"></i>
                                            <h5 class="mt-3">No forum posts found</h5>
                                            <p class="text-muted mb-3">
                                                @(string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) &&
                                                    string.IsNullOrEmpty(ViewData["CategoryFilter"]?.ToString()) &&
                                                    string.IsNullOrEmpty(ViewData["FlagFilter"]?.ToString())
                                                    ? "There are no forum posts in the community yet"
                                                    : "No forum posts match your search criteria")
                                            </p>

                                            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) ||
                                           !string.IsNullOrEmpty(ViewData["CategoryFilter"]?.ToString()) ||
                                           !string.IsNullOrEmpty(ViewData["FlagFilter"]?.ToString()))
                                            {
                                                <a asp-page="./ManageForum" class="btn btn-outline-secondary">
                                                    <i class="bi bi-arrow-counterclockwise me-2"></i> Clear Filters
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.ForumPosts != null && Model.ForumPosts.Any())
                {
                    <div class="card-footer bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                Showing @((Model.PageIndex - 1) * Model.PageSize + 1) -
                                @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount))
                                of @Model.TotalCount forum posts
                            </small>
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    @{
                                        var prevDisabled = Model.PageIndex <= 1 ? "disabled" : "";
                                        var nextDisabled = Model.PageIndex >= Model.TotalPages ? "disabled" : "";
                                    }
                                    <li class="page-item @prevDisabled">
                                        <a class="page-link" asp-page="./ManageForum"
                                           asp-route-pageIndex="1"
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                                           asp-route-categoryFilter="@ViewData["CategoryFilter"]"
                                           asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @prevDisabled">
                                        <a class="page-link" asp-page="./ManageForum"
                                           asp-route-pageIndex="@(Model.PageIndex - 1)"
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                                           asp-route-categoryFilter="@ViewData["CategoryFilter"]"
                                           asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>

                                    @for (var i = Math.Max(1, Model.PageIndex - 2);
                                   i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                            <a class="page-link" asp-page="./ManageForum"
                                               asp-route-pageIndex="@i"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                                               asp-route-categoryFilter="@ViewData["CategoryFilter"]"
                                               asp-route-flagFilter="@ViewData["FlagFilter"]">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @nextDisabled">
                                        <a class="page-link" asp-page="./ManageForum"
                                           asp-route-pageIndex="@(Model.PageIndex + 1)"
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                                           asp-route-categoryFilter="@ViewData["CategoryFilter"]"
                                           asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @nextDisabled">
                                        <a class="page-link" asp-page="./ManageForum"
                                           asp-route-pageIndex="@Model.TotalPages"
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                                           asp-route-categoryFilter="@ViewData["CategoryFilter"]"
                                           asp-route-flagFilter="@ViewData["FlagFilter"]">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Hide Post Modal -->
<div class="modal fade" id="hidePostModal" tabindex="-1" aria-labelledby="hidePostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="hidePostModalLabel">
                    <i class="bi bi-eye-slash me-2"></i>Hide Forum Post
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="HidePost">
                <div class="modal-body">
                    <p>Are you sure you want to hide the forum post: <strong id="postTitleHide"></strong>?</p>
                    <p class="text-muted mb-1">This post will no longer be visible to community members.</p>

                    <div class="mb-3 mt-3">
                        <label for="adminNotes" class="form-label">Admin Notes (Optional)</label>
                        <textarea class="form-control" id="adminNotes" name="adminNotes" rows="3"
                                  placeholder="Add a note explaining why this post was hidden..."></textarea>
                        <div class="form-text">This note will only be visible to administrators.</div>
                    </div>

                    <input type="hidden" id="postIdToHide" name="id" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-eye-slash me-1"></i>Hide Post
                    </button>
                </div>
            </form>
        </div>
    </div>
</div


<!-- Manage Comments Modal -->
<div class="modal fade" id="manageCommentsModal" tabindex="-1" aria-labelledby="manageCommentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="manageCommentsModalLabel">
                    <i class="bi bi-chat-dots me-2"></i>Manage Comments
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
