        const secondaryChartCtx = document.getElementById('secondaryChart');
        if (secondaryChartCtx) {
            new Chart(secondaryChartCtx, {
                type: secondaryChartData.type,
                data: secondaryChartData.data,
                options: {
                    ...secondaryChartData.options,
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 12,
                                font: {
                                    size: 11
                                }
                            }
                        }
                    }
                }
            });
        }

        // Additional charts
        const additionalChart1Ctx = document.getElementById('additionalChart1');
        if (additionalChart1Ctx) {
            new Chart(additionalChart1Ctx, {
                type: additionalChart1Data.type,
                data: additionalChart1Data.data,
                options: {
                    ...additionalChart1Data.options,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false,
                                color: 'rgba(0,0,0,0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
