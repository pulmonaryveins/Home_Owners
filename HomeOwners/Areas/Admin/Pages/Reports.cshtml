<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set chart defaults to match theme
        Chart.defaults.color = '#6c757d';
        Chart.defaults.font.family = "'Segoe UI', 'Helvetica Neue', 'Arial', sans-serif";

        // Initialize Chart.js configurations
        const primaryChartData = @Html.Raw(Json.Serialize(Model.PrimaryChartData));
        const secondaryChartData = @Html.Raw(Json.Serialize(Model.SecondaryChartData));
        const additionalChart1Data = @Html.Raw(Json.Serialize(Model.AdditionalChart1Data));
        const additionalChart2Data = @Html.Raw(Json.Serialize(Model.AdditionalChart2Data));

        // Primary chart initialization
        const primaryChartCtx = document.getElementById('primaryChart');
        if (primaryChartCtx) {
            new Chart(primaryChartCtx, {
                type: primaryChartData.type,
                data: primaryChartData.data,
                options: {
                    ...primaryChartData.options,
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            align: 'end',
                            labels: {
                                boxWidth: 12,
                                font: {
                                    size: 11
                                }
                            }
                        }
                    },
                    scales: {
                        ...primaryChartData.options?.scales,
                        y: {
                            beginAtZero: true,
                            grid: {
