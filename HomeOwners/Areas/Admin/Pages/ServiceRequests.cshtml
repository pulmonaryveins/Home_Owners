</nav>

<div class="container mt-5 pt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="bi bi-tools me-2"></i>
                Service Requests Management
            </h1>
            <p class="text-muted mb-0 mt-1">Manage and respond to homeowner service requests</p>
        </div>
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i> Back to Services
        </a>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        var statusType = TempData["StatusType"]?.ToString() == "Success" ? "success" : "danger";
        <div class="alert alert-@statusType alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi @(statusType == "success" ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                <span>@TempData["StatusMessage"]</span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <ul class="nav nav-pills card-header-pills" id="requestTabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#pending-requests" data-bs-toggle="tab">
                        <i class="bi bi-hourglass me-2"></i> Pending Requests
                        @if (Model.PendingRequests.Any())
                        {
                            <span class="badge bg-danger ms-1">@Model.PendingRequests.Count()</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#all-requests" data-bs-toggle="tab">
                        <i class="bi bi-list-check me-2"></i> All Requests
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pending-requests">
                    <div class="card-body border-bottom">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" id="pendingSearch" 
                                           placeholder="Search pending requests..." 
                                           aria-label="Search requests">
                                </div>
                            </div>
                            <div class="col-md-6 d-flex justify-content-md-end">
                                <div class="dropdown">
                                    <button type="button"
                                            class="btn btn-outline-secondary dropdown-toggle"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-sort-alpha-down"></i>
                                        <span class="ms-1 d-none d-md-inline">Sort by</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item active" href="#">
                                                <i class="bi bi-calendar-date"></i> Newest First
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-calendar-date"></i> Oldest First
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-sort-alpha-down"></i> Name (A-Z)
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-sort-alpha-up"></i> Name (Z-A)
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover request-table mb-0">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Requester</th>
                                    <th>Contact</th>
                                    <th>Date & Time</th>
                                    <th>Assigned Team</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PendingRequests != null && Model.PendingRequests.Any())
                                {
                                    @foreach (var request in Model.PendingRequests)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@(string.IsNullOrEmpty(request.Service?.ImageUrl) ? "/images/placeholder.jpg" : request.Service.ImageUrl)"
                                                         alt="@request.Service?.Name" class="request-thumbnail me-3">
                                                    <span class="service-name">@request.Service?.Name</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="requester-info">
                                                    <strong>@request.FullName</strong>
                                                    <div class="house-number">House #@request.HouseNumber</div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="contact-info">
                                                    <i class="bi bi-telephone me-1"></i> @request.ContactNumber
                                                </div>
                                            </td>
                                            <td>
                                                <div class="date-time-info">
                                                    <div><i class="bi bi-calendar3 me-1"></i> @request.RequestDate.ToString("MMM dd, yyyy")</div>
                                                    <div><i class="bi bi-clock me-1"></i> @DateTime.Today.Add(request.PreferredTime).ToString("h:mm tt")</div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (request.ServicePersonnelId.HasValue && request.ServicePersonnel != null)
                                                {
                                                    <div class="team-info">
                                                        <span class="team-badge">
                                                            <i class="bi bi-people-fill me-1"></i> @request.ServicePersonnel.TeamName
                                                        </span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted"><i class="bi bi-dash-circle me-1"></i>Not assigned</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#assignTeamModal@(request.Id)">
                                                        <i class="bi bi-check-lg"></i> Assign & Approve
                                                    </button>
                                                    <form method="post" asp-page-handler="RejectRequest" asp-route-id="@request.Id">
                                                        <button type="submit" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Reject Request">
                                                            <i class="bi bi-x-lg"></i> Reject
                                                        </button>
                                                    </form>
                                                    <button type="button" class="btn btn-sm btn-outline-primary"
                                                            data-bs-toggle="modal" data-bs-target="#detailsModal@(request.Id)">
                                                        <i class="bi bi-eye"></i> Details
                                                    </button>
                                                </div>

                                                <!-- Add Team Assignment Modal -->
                                                <div class="modal fade" id="assignTeamModal@(request.Id)" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Assign Team to Service Request</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <form method="post" asp-page-handler="ApproveRequest" asp-route-id="@request.Id">
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <div class="alert alert-info">
                                                                            <i class="bi bi-info-circle-fill me-2"></i>
                                                                            <strong>Important:</strong> You must assign a team before approving this service request.
                                                                        </div>

                                                                        <label class="form-label">Service Requested</label>
                                                                        <div class="d-flex align-items-center mb-3 p-2 bg-light rounded">
                                                                            <img src="@(string.IsNullOrEmpty(request.Service?.ImageUrl) ? "/images/placeholder.jpg" : request.Service.ImageUrl)"
                                                                                 alt="@request.Service?.Name" class="request-thumbnail me-3">
                                                                            <div>
                                                                                <strong>@request.Service?.Name</strong>
                                                                                <div class="small text-muted">Service ID: @request.ServiceId</div>
                                                                            </div>
                                                                        </div>

                                                                        <label class="form-label">Select Team</label>
                                                                        @if (Model.AvailableTeams.ContainsKey(request.Id) && Model.AvailableTeams[request.Id].Any())
                                                                        {
                                                                            <select name="teamId" class="form-select" required>
                                                                                <option value="">-- Select a team --</option>
                                                                                @foreach (var team in Model.AvailableTeams[request.Id])
                                                                                {
                                                                                    <option value="@team.Id">@team.TeamName - @team.NumberOfPersonnel personnel</option>
                                                                                }
                                                                            </select>
                                                                            <div class="form-text">Select a team that specializes in this service.</div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div class="alert alert-warning">
                                                                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                                                No teams available for this service. <a asp-area="Admin" asp-page="/ServicePersonnel" class="alert-link">Create a team</a> before approving.
                                                                            </div>
                                                                            <input type="hidden" name="teamId" value="0" />
                                                                        }
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-success"
                                                                    @((!Model.AvailableTeams.ContainsKey(request.Id) || !Model.AvailableTeams[request.Id].Any()) ? "disabled" : "")>
                                                                        <i class="bi bi-check-lg me-1"></i> Assign & Approve
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Modal for Details -->
                                                <div class="modal fade" id="detailsModal@(request.Id)" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Service Request Details</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="request-details">
                                                                    <div class="mb-3">
                                                                        <div class="d-flex justify-content-center mb-3">
                                                                            <img src="@(string.IsNullOrEmpty(request.Service?.ImageUrl) ? "/images/placeholder.jpg" : request.Service.ImageUrl)"
                                                                                 alt="@request.Service?.Name" class="request-detail-image">
                                                                        </div>
                                                                        <h5 class="service-title text-center">@request.Service?.Name</h5>
                                                                    </div>

                                                                    <div class="detail-section">
                                                                        <h6>Requester Information</h6>
                                                                        <div class="detail-item">
                                                                            <span class="detail-label">Name:</span>
                                                                            <span class="detail-value">@request.FullName</span>
                                                                        </div>
                                                                        <div class="detail-item">
                                                                            <span class="detail-label">House Number:</span>
                                                                            <span class="detail-value">#@request.HouseNumber</span>
                                                                        </div>
                                                                        <div class="detail-item">
                                                                            <span class="detail-label">Contact Number:</span>
                                                                            <span class="detail-value">@request.ContactNumber</span>
                                                                        </div>
                                                                    </div>

                                                                    <div class="detail-section">
                                                                        <h6>Service Details</h6>
                                                                        <div class="detail-item">
                                                                            <span class="detail-label">Date:</span>
                                                                            <span class="detail-value">@request.RequestDate.ToString("MMMM dd, yyyy")</span>
                                                                        </div>
                                                                        <div class="detail-item">
                                                                            <span class="detail-label">Time:</span>
                                                                            <span class="detail-value">@DateTime.Today.Add(request.PreferredTime).ToString("h:mm tt")</span>
                                                                        </div>
                                                                        <div class="detail-item">
                                                                            <span class="detail-label">Request Date:</span>
                                                                            <span class="detail-value">@request.CreatedDate.ToString("MMMM dd, yyyy h:mm tt")</span>
                                                                        </div>

                                                                        <h6>Assigned Team</h6>
                                                                        @if (request.ServicePersonnelId.HasValue && request.ServicePersonnel != null)
                                                                        {
                                                                            <div class="detail-item">
                                                                                <span class="detail-label">Team Name:</span>
                                                                                <span class="detail-value">@request.ServicePersonnel.TeamName</span>
                                                                            </div>
                                                                            <div class="detail-item">
                                                                                <span class="detail-label">Number of Personnel:</span>
                                                                                <span class="detail-value">@request.ServicePersonnel.NumberOfPersonnel</span>
                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div class="alert alert-warning mb-0">
                                                                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                                                No team assigned yet.
                                                                                @if (request.Status == ServiceRequestStatus.Pending)
                                                                                {
                                                                                    <span>A team must be assigned before approval.</span>
                                                                                }
                                                                            </div>
                                                                        }
                                                                    </div>

                                                                    @if (!string.IsNullOrEmpty(request.AdditionalDetails))
                                                                    {
                                                                        <div class="detail-section">
                                                                            <h6>Additional Details</h6>
                                                                            <div class="additional-details p-3">
                                                                                @request.AdditionalDetails
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                <button type="button" class="btn btn-success" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#assignTeamModal@(request.Id)">
                                                                    <i class="bi bi-people me-1"></i> Assign Team
                                                                </button>
                                                                <form method="post" asp-page-handler="RejectRequest" asp-route-id="@request.Id" class="d-inline">
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="bi bi-x-lg me-1"></i> Reject
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="bi bi-hourglass display-4 text-muted"></i>
                                                <h5 class="mt-3">No pending requests</h5>
                                                <p class="text-muted">There are no pending service requests at the moment</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="all-requests">
                    <div class="card-body border-bottom">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" id="allSearch" 
                                           placeholder="Search requests..." 
                                           aria-label="Search all requests">
                                </div>
                            </div>
                            <div class="col-md-6 d-flex justify-content-md-end gap-2">
                                <form method="post" asp-page-handler="ClearAllRequests" onsubmit="return confirm('WARNING: This will permanently delete ALL service requests from the database. This action cannot be undone. Are you sure you want to proceed?');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash3"></i> Clear Data
                                    </button>
                                </form>
                                <div class="dropdown">
                                    <button type="button"
                                            class="btn btn-outline-primary dropdown-toggle"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-filter"></i>
                                        <span class="ms-1">All Statuses</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item active" href="#"><i class="bi bi-grid-3x3-gap"></i> All Statuses</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-hourglass"></i> Pending</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-check-circle"></i> Approved</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-trophy"></i> Done</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-x-circle"></i> Rejected</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button type="button"
                                            class="btn btn-outline-secondary dropdown-toggle"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-sort-alpha-down"></i>
                                        <span class="ms-1 d-none d-md-inline">Sort by</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item active" href="#">
                                                <i class="bi bi-calendar-date"></i> Newest First
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-calendar-date"></i> Oldest First
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-sort-alpha-down"></i> Name (A-Z)
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-sort-alpha-up"></i> Name (Z-A)
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover request-table mb-0">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Requester</th>
                                    <th>Contact</th>
                                    <th>Date & Time</th>
                                    <th>Assigned Team</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.AllRequests != null && Model.AllRequests.Any())
                                {
                                    @foreach (var request in Model.AllRequests)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@(string.IsNullOrEmpty(request.Service?.ImageUrl) ? "/images/placeholder.jpg" : request.Service.ImageUrl)"
                                                         alt="@request.Service?.Name" class="request-thumbnail me-3">
                                                    <span class="service-name">@request.Service?.Name</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="requester-info">
                                                    <strong>@request.FullName</strong>
                                                    <div class="house-number">House #@request.HouseNumber</div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="contact-info">
                                                    <i class="bi bi-telephone me-1"></i> @request.ContactNumber
                                                </div>
                                            </td>
