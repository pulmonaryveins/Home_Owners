@page
@model HomeOwners.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Manage Your Account";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs" id="manageAccountTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="password-tab" data-bs-toggle="tab" href="#password" role="tab" aria-controls="password" aria-selected="false">Change Password</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="notifications-tab" data-bs-toggle="tab" href="#notifications" role="tab" aria-controls="notifications" aria-selected="false">Notifications</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="delete-account-tab" data-bs-toggle="tab" href="#delete-account" role="tab" aria-controls="delete-account" aria-selected="false">Delete Account</a>
            </li>
        </ul>
        <div class="tab-content" id="manageAccountTabsContent">
            <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Input.Username" class="control-label"></label>
                        <input asp-for="Input.Username" class="form-control" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="control-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
            <div class="tab-pane fade" id="password" role="tabpanel" aria-labelledby="password-tab">
                <form method="post" asp-page-handler="ChangePassword">
                    <div class="form-group">
                        <label asp-for="ChangePasswordInput.OldPassword" class="control-label"></label>
                        <input asp-for="ChangePasswordInput.OldPassword" class="form-control" />
                        <span asp-validation-for="ChangePasswordInput.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChangePasswordInput.NewPassword" class="control-label"></label>
                        <input asp-for="ChangePasswordInput.NewPassword" class="form-control" />
                        <span asp-validation-for="ChangePasswordInput.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChangePasswordInput.ConfirmPassword" class="control-label"></label>
                        <input asp-for="ChangePasswordInput.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ChangePasswordInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </form>
            </div>
            <div class="tab-pane fade" id="notifications" role="tabpanel" aria-labelledby="notifications-tab">
                <h3>Notifications</h3>
                <p>Manage your notification settings here.</p>
                <!-- Add your notification settings form here -->
            </div>
            <div class="tab-pane fade" id="delete-account" role="tabpanel" aria-labelledby="delete-account-tab">
                <h3>Delete Account</h3>
                <p>If you want to delete your account, please click the button below. This action is irreversible.</p>
                <form method="post" asp-page-handler="DeleteAccount">
                    <button type="submit" class="btn btn-danger">Delete Account</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Off white background */
    }

    h2 {
        color: #4e6e4d; /* Green color */
    }

    .form-control {
        border: 1px solid #4e6e4d; /* Green border */
        border-radius: 4px;
        padding: 0.5rem;
    }

        .form-control:focus {
            border-color: #4e6e4d;
            box-shadow: 0 0 0 0.2rem rgba(78, 110, 77, 0.25);
        }

    .btn-primary {
        background-color: #4e6e4d; /* Green button */
        border-color: #4e6e4d;
    }

        .btn-primary:hover {
            background-color: #3d5a3c; /* Darker green on hover */
            border-color: #3d5a3c;
        }

    .btn-danger {
        background-color: #dc3545; /* Red button */
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
            border-color: #bd2130;
        }

    .text-danger {
        color: #dc3545; /* Red color for validation errors */
    }

    .nav-tabs .nav-link.active {
        background-color: #4e6e4d; /* Green active tab */
        color: white;
    }

    .nav-tabs .nav-link {
        color: #4e6e4d; /* Green tab text */
    }

        .nav-tabs .nav-link:hover {
            background-color: #e0e0e0; /* Light grey on hover */
        }
</style>
