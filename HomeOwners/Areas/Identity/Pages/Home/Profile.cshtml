        margin-bottom: 3rem;
        border-radius: 0 0 var(--border-radius) var(--border-radius);
        box-shadow: var(--card-shadow);
    }

    /* Profile Sidebar */
    .profile-sidebar {
        background: var(--text-light);
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
