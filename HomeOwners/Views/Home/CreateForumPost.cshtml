<!-- Main Content Section -->
<div class="container forum-section">
    <div class="breadcrumbs mb-3">
        <a href="@Url.Action("Forum")">Forum</a> <i class="bi bi-chevron-right mx-2 small"></i> <span>Create New Post</span>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h1 class="card-title h4 mb-0">Create a New Discussion</h1>
                </div>

                <div class="card-body">
                    <form method="post" action="@Url.Action("CreateForumPost", "Home")">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="Title" class="form-label">Title</label>
                            <input type="text" id="Title" name="Title" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="Category" class="form-label">Category</label>
                            <select id="Category" name="Category" class="form-select">
                                <option value="General">General Discussion</option>
                                <option value="Question">Question</option>
                                <option value="Suggestion">Suggestion / Idea</option>
                                <option value="Event">Event Coordination</option>
                                <option value="Support">Help / Support</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="Content" class="form-label">Content</label>
                            <textarea id="Content" name="Content" class="form-control" rows="8" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Create Post</button>
                    </form>
                </div>
            </div>

            <div class="forum-guidelines card mt-4 shadow-sm">
                <div class="card-header bg-white">
                    <h2 class="h5 mb-0"><i class="bi bi-info-circle me-2"></i>Community Forum Guidelines</h2>
                </div>
                <div class="card-body">
                    <ul class="guidelines-list mb-0">
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <div>
                                <strong>Be respectful and constructive</strong>
                                <p class="small mb-0 text-muted">Treat others with respect, even in disagreement.</p>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <div>
                                <strong>Stay on topic</strong>
                                <p class="small mb-0 text-muted">Keep discussions relevant to the selected category.</p>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <div>
                                <strong>Avoid duplicate posts</strong>
                                <p class="small mb-0 text-muted">Check if your topic has already been discussed.</p>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <div>
                                <strong>Protect privacy</strong>
                                <p class="small mb-0 text-muted">Do not share personal information of others without consent.</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #4e6e4d;
        --primary-dark: #3d5a3c;
        --primary-light: rgba(78, 110, 77, 0.1);
        --primary-lighter: rgba(78, 110, 77, 0.05);
        --text-dark: #333;
        --text-muted: #6c757d;
        --text-light: #f8f9fa;
        --border-radius: 12px;
        --box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        --card-shadow: 0 2px 10px rgba(0,0,0,0.05);
        --transition: all 0.3s ease;
    }

    .forum-section {
        padding-top: 100px;
        padding-bottom: 5rem;
    }

    /* Breadcrumbs */
    .breadcrumbs {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

        .breadcrumbs a {
            color: var(--primary-color);
            text-decoration: none;
        }

            .breadcrumbs a:hover {
                text-decoration: underline;
            }

    /* Card Styling */
    .card {
        border: none;
        border-radius: var(--border-radius);
        overflow: hidden;
    }

    .card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        color: var(--primary-color);
        font-weight: 600;
    }

    /* Form Styling */
    .form-label {
        font-weight: 500;
        color: var(--text-dark);
    }

    .form-control, .form-select {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        border: 1px solid rgba(0,0,0,0.1);
        transition: var(--transition);
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(78, 110, 77, 0.25);
        }

    .form-text {
        color: var(--text-muted);
        font-size: 0.85rem;
        margin-top: 0.35rem;
    }

    /* Guidelines */
    .forum-guidelines .card-header {
        border-left: 4px solid var(--primary-color);
    }

    .guidelines-list {
        padding: 0;
        margin: 0;
        list-style: none;
    }

        .guidelines-list li {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.25rem;
        }

            .guidelines-list li:last-child {
                margin-bottom: 0;
            }

            .guidelines-list li i {
                color: var(--primary-color);
                font-size: 1.1rem;
                margin-top: 0.25rem;
            }

    /* Buttons */
    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        padding: 0.6rem 1.25rem;
        font-weight: 500;
        transition: var(--transition);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(78, 110, 77, 0.3);
        }

    .btn-outline-secondary {
        color: var(--text-muted);
        border-color: rgba(0,0,0,0.1);
        padding: 0.6rem 1.25rem;
        font-weight: 500;
        transition: var(--transition);
    }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
            color: var(--text-dark);
            border-color: rgba(0,0,0,0.15);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}