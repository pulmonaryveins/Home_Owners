@model HomeOwners.Models.ForumPost
@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Main Content Section -->
<div class="container forum-section">
    <div class="breadcrumbs mb-3">
        <a href="@Url.Action("Forum")">Forum</a> <i class="bi bi-chevron-right mx-2 small"></i> <span>@Model.Title</span>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        var statusType = TempData["StatusType"]?.ToString() == "Success" ? "success" : "danger";
        <div class="alert alert-@statusType alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi @(statusType == "success" ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                <span>@TempData["StatusMessage"]</span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Single Post Details -->
        <div class="col-lg-8">
            <div class="forum-post-card @(Model.IsFlagged ? "flagged" : "")">
                <div class="post-category">
                    <span class="category-badge @Model.Category.ToLower()">@Model.Category</span>
                </div>
                <div class="post-main">
                    <div class="post-content">
                        <h1 class="post-title">@Model.Title</h1>
                        <div class="post-full-content">
                            @Model.Content
                        </div>
                    </div>
                    <div class="post-meta">
                        <div class="user-info">
                            <div class="avatar">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <div class="user-details">
                                <span class="user-name">@Model.UserName</span>
                                @if (!string.IsNullOrEmpty(Model.FullName) && !string.IsNullOrEmpty(Model.HouseNumber))
                                {
                                    <span class="homeowner-info">
                                        <i class="bi bi-house me-1"></i>
                                        @Model.FullName - House #@Model.HouseNumber
                                    </span>
                                }
                                <span class="post-date">
                                    <i class="bi bi-clock me-1"></i>
                                    @Model.PostedDate.ToString("MMM dd, yyyy") at @Model.PostedDate.ToString("h:mm tt")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="comments-section mt-4">
                <h3>Comments</h3>

                @if (ViewBag.Comments != null && ViewBag.Comments.Count > 0)
                {
                    <div class="comments-list">
                        @foreach (var comment in ViewBag.Comments)
                        {
                            <div class="comment">
                                <div class="comment-meta">
                                    <div class="user-info">
                                        <div class="avatar small">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                                        <div class="user-details">
                                            <span class="user-name">@comment.UserName</span>
                                            <span class="comment-date">@comment.PostedDate.ToString("MMM dd, yyyy h:mm tt")</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="comment-content">
                                    @comment.Content
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="no-comments">No comments yet. Be the first to comment!</p>
                }

                <!-- Comment Form -->
                <div class="comment-form mt-4">
                    <h4>Add a Comment</h4>
                    <form method="post" action="@Url.Action("AddComment", "Home")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="postId" value="@Model.Id" />
                        <div class="mb-3">
                            <textarea class="form-control" name="content" rows="3" placeholder="Share your thoughts..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-2"></i> Post Comment
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column - Sidebar -->
        <div class="col-lg-4">
            <!-- Include your sidebar widgets here -->
        </div>
    </div>
</div>

<style>
    /* Include your existing styles and add styles for comments */
    .homeowner-info {
        color: var(--primary-color);
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        margin-bottom: 0.25rem;
    }
    .comments-section {
        margin-top: 2rem;
    }

        .comments-section h3 {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--text-dark);
        }

    .comments-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .comment {
        background: white;
        border-radius: var(--border-radius);
        padding: 1.25rem;
        box-shadow: var(--card-shadow);
    }

    .comment-meta {
        margin-bottom: 0.75rem;
    }

    .avatar.small {
        width: 32px;
        height: 32px;
        font-size: 1rem;
    }

    .comment-content {
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .comment-form {
        background: white;
        border-radius: var(--border-radius);
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        margin-top: 1.5rem;
    }

        .comment-form h4 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

    .no-comments {
        background: #f8f9fa;
        padding: 1.5rem;
        text-align: center;
        border-radius: var(--border-radius);
        color: var(--text-muted);
    }

    .post-full-content {
        white-space: pre-line;
        line-height: 1.7;
    }
</style>