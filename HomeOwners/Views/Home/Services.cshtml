        color: #4e6e4d;
        font-weight: 500;
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .section-subtitle {
        color: #666;
        margin-bottom: 3rem;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .service-card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        height: 100%;
        transition: all 0.3s ease;
        text-align: center;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

    .service-icon {
        width: 80px;
        height: 80px;
        background-color: #4e6e4d;
